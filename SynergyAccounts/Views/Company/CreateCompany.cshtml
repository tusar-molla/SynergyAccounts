@model SynergyAccounts.Models.Company
@{
    ViewData["Title"] = Model.Id == 0 ? "Create Company" : "Update Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">@(Model.Id == 0 ? "Create Company" : "Update Company")</div>
            </div>
            <div class="card-body">
                <form asp-action="@(Model.Id == 0 ? "CreateCompany" : "EditCompany")" asp-controller="Company" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter Company Name" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TagLine" class="control-label"></label>
                                <input asp-for="TagLine" class="form-control" placeholder="Enter Tagline" />
                            </div>
                            <div class="form-group">
                                <label asp-for="VatRegistrationNo" class="control-label"></label>
                                <input asp-for="VatRegistrationNo" class="form-control" placeholder="Enter VAT Registration No" />
                            </div>
                            <div class="form-group">
                                <label asp-for="TinNo" class="control-label"></label>
                                <input asp-for="TinNo" class="form-control" placeholder="Enter TIN No" />
                            </div>
                            <div class="form-group">
                                <label asp-for="WebsiteLink" class="control-label"></label>
                                <input asp-for="WebsiteLink" class="form-control" placeholder="Enter Website Link" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email Address" />
                            </div>
                            <div class="form-group">
                                <label asp-for="ContactNumber" class="control-label"></label>
                                <input asp-for="ContactNumber" class="form-control" placeholder="Enter Contact Number" />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <textarea asp-for="Address" class="form-control" placeholder="Enter Address"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Remarks" class="control-label"></label>
                                <textarea asp-for="Remarks" class="form-control" placeholder="Enter Remarks"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="LogoImage" class="control-label">Company Logo</label>
                                <input asp-for="LogoImage" type="file" class="form-control-file" />
                                @if (!string.IsNullOrEmpty(Model.LogoPath))
                                {
                                    <br />
                                    <img src="@Model.LogoPath" alt="Company Logo" width="150" />
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-action d-flex justify-content-center">
                        <button type="submit" class="btn btn-success">@(Model.Id == 0 ? "Create" : "Update")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
